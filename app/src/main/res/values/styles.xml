<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="estilo_normal">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="estilo_conectado">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/verde</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="estilo_no_conectado">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/rojo</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
